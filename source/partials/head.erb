<meta charset="utf-8" />
<meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- bootstrap -->
<link rel="stylesheet" href="/assets/bootstrap/4.1.3/bootstrap.min.css" />

<script src="/assets/bootstrap/4.1.3/bootstrap.min.js"></script>
<script src="/jquery/slim/3.3.1/jquery-3.3.1.slim.min.js"></script>
<script src="/popper.js/1.14.3/popper.min.js"></script>
<!-- /bootstrap -->

<!-- fonts -->
<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@300&display=swap" rel="stylesheet" />

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" />
<!-- /fonts -->

<!-- GA -->
<!-- Global site tag (gtag.js) - Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id=UA-131854756-1"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'UA-131854756-1');
</script>
<!-- /GA-->

<!-- metatags -->
<meta name="author" content="Thiago Henrique de Paulo Lima" />

<% unless current_article.nil? %>
<% if current_article.data.description.nil? %>
<meta name="description" content="<%= current_article.summary.gsub('<p>', '').gsub('</p>', '') %>" />
<% else %>
<meta name="description" content="<%= current_article.data.description %>" />
<% end %>
<% end %>
<!-- /metatags -->

<!-- main links -->
<link rel="stylesheet" href="/assets/main.css" />
<link rel="stylesheet" href="/assets/post.css" />
<%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
<!-- /main links -->
